<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <title>MiniProject - Profile</title>
</head>
<body>
  <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
    <a class="bg-red-500 rounded-md w-20 px-5 py-2 text-sm inline-block mb-5" href="/logout">Logout</a>
    
    <h3 class="text-3xl">Hello, <%= user.name %></h3>
    <h5 class="mb-5">You can create a new post:</h5>

    <!-- Post creation form -->
    <form action="/post" method="POST">
      <textarea 
        placeholder="What's on your mind?" 
        name="content" 
        class="w-1/3 p-3 resize-none block bg-transparent border-2 border-zinc-800 rounded-md"
        required></textarea>
      <input 
        type="submit" 
        value="Create Post" 
        class="px-3 py-2 bg-blue-500 w-40 text-sm rounded-md block mt-2 outline-none cursor-pointer">
    </form>

    <!-- User posts section -->
    <div class="posts mt-20">
      <h3 class="text-zinc-400 text-xl">Your Posts</h3>
      <div class="postscontainer mt-5">

        <% if (user.posts && user.posts.length > 0) { %>
          <% user.posts.forEach(function(post) { %>
            <div class="post w-1/3 p-4 border border-zinc-700 rounded-md mb-4 bg-zinc-800">
              <h4 class="text-blue-500 mb-2">@<%= user.username %></h4>
              <p class="text-sm tracking-tight"><%= post.content %></p>
              <div class="btns flex mt-5 gap-5">
                <a class="text-blue-500" href="#">Like</a>
                <a class="text-zinc-500" href="#">Edit</a>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-zinc-500 mt-4">You haven't posted anything yet.</p>
        <% } %>

      </div>
    </div>
  </div>
</body>
</html>
